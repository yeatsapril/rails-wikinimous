<div class="container border border-primary p-4"><h2><%= @article.title %></h2></div>
<div class="container border-bottom border-primary mt-4"><p><%= @article.content %></p></div>

<div class="container d-flex justify-content-between mt-4">
  <div class="btn btn-outline-dark"><%= link_to 'Edit article', edit_article_path(@article)%></div>
  <div class="btn btn-outline-dark"><%= link_to 'Delete this article', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }%></div>
  <div class="btn btn-outline-dark"><%= link_to 'Back to articles', articles_path %></div>
</div>
